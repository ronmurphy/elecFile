{
  "name": "hyprland-file-manager",
  "version": "1.0.0",
  "description": "A modern file manager designed for Linux and Hyprland",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/hyprland-file-manager",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "keywords": [
    "file-manager",
    "linux",
    "hyprland",
    "wayland",
    "electron",
    "desktop"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:appimage": "electron-builder --linux appimage",
    "build:deb": "electron-builder --linux deb",
    "build:rpm": "electron-builder --linux rpm",
    "build:snap": "electron-builder --linux snap",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist build",
    "lint": "eslint .",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "build": {
    "appId": "com.hyprland.filemanager",
    "productName": "Hyprland File Manager",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "category": "System;FileManager;Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png",
      "synopsis": "Modern file manager for Hyprland and Linux",
      "description": "A sleek, modern file manager designed specifically for Linux users and Hyprland window manager. Features dark/light themes, grid/list views, image previews, and keyboard shortcuts optimized for tiling window managers.",
      "desktop": {
        "Name": "Hyprland File Manager",
        "Comment": "Modern file manager for Linux",
        "Keywords": "file;manager;browser;explorer;hyprland;wayland",
        "Categories": "System;FileManager;Utility",
        "MimeType": "inode/directory",
        "StartupWMClass": "hyprland-file-manager"
      }
    },
    "appImage": {
      "license": "MIT",
      "category": "System"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libdrm2",
        "libxcomposite1",
        "libxdamage1",
        "libxrandr2",
        "libgbm1",
        "libxss1",
        "libasound2"
      ],
      "recommends": [
        "gvfs-backends",
        "udisks2"
      ]
    },
    "rpm": {
      "depends": [
        "gtk3",
        "libnotify",
        "nss",
        "libXScrnSaver",
        "libXtst",
        "xdg-utils",
        "at-spi2-core",
        "libdrm",
        "libXcomposite",
        "libXdamage",
        "libXrandr",
        "mesa-libgbm",
        "alsa-lib"
      ]
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "environment": {
        "DISABLE_WAYLAND_PROXY": "1"
      },
      "plugs": [
        "default",
        "home",
        "removable-media",
        "wayland",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "audio-playback",
        "pulseaudio",
        "desktop",
        "desktop-legacy"
      ]
    },
    "publish": null
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hyprland-file-manager.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/hyprland-file-manager/issues"
  }
}
